/*------------------------------------------------------------------------
 *
 *  Standard memory
 *
 *   Commands: 0 = write, 1 = read, 2 = read-modify-write
 *
 *------------------------------------------------------------------------
 */

import "std/func.act";

namespace std {

export template<pint N, W>
defproc ram (chan?(int<2>) rd; chan?(int<std::ceil_log2(N)>) addr;
             chan?(int<W>) din;
             chan!(int<W>) dout)
{
  pint bits = std::ceil_log2(N);
  int<W> m[N];
  int<bits> a;
  int<2> b;

  chp {
      *[ addr?a,rd?b;
         [ b=0 -> din?m[a]
        [] b=1 -> dout!m[a]
        [] b=2 -> dout!m[a]; din?m[a]
         ]
       ]
    }
}

}
